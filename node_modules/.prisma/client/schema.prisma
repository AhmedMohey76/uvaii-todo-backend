// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Database configuration changed from PostgreSQL to SQLite for local development ease.
// SQLite is file-based and requires no external server setup.
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------------------
// USER MODEL (Authentication)
// ---------------------------------------------------------------------

model User {
  // Primary Key and unique ID for the user
  id Int @id @default(autoincrement())

  // Credentials
  username     String @unique
  email        String @unique
  passwordHash String

  // Relationship: A User can have many Tasks
  tasks Task[]
}

// ---------------------------------------------------------------------
// TASK MODEL (Todo Items)
// ---------------------------------------------------------------------

model Task {
  // Primary Key and unique ID for the task
  id Int @id @default(autoincrement())

  // Task Data
  title     String
  isDone    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relationship: Links the Task back to the User who created it.
  // This is the foreign key.
  authorId Int
  author   User @relation(fields: [authorId], references: [id])
}
